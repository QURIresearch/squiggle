{
  "extends": "@quri/configs/tsconfig.base.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": " @mdx-js/typescript-plugin",
      },
    ],
    "paths": {
      "@/*": ["./src/*"],
    },
    "lib": ["esnext"],
    "strictNullChecks": true,
    "rootDir": ".",
    "outDir": "dist",
  },
  "include": ["src/**/*", "content/**/*.mdx"],
  "mdx": {
    "checkMdx": true,
  },
}
