{
  "compilerOptions": {
    "module": "commonjs",
    "jsx": "react",
    "allowJs": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "./dist",
    "declarationDir": "./dist",
    "declaration": true,
    "composite": true,
    "target": "ES6"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "webpack.config.js"]
}
