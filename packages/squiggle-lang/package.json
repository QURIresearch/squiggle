{
  "name": "@quri/squiggle-lang",
  "version": "0.7.0",
  "license": "MIT",
  "homepage": "https://squiggle-language.com",
  "author": "Quantified Uncertainty Research Institute",
  "repository": {
    "type": "git",
    "url": "https://github.com/quantified-uncertainty/squiggle.git",
    "directory": "packages/squiggle-lang"
  },
  "scripts": {
    "build": "pnpm run build:peggy && pnpm run build:ts",
    "build:peggy": "peggy --cache --format es ./src/ast/peggyParser.peggy",
    "build:ts": "tsc -b ./tsconfig.json ./tsconfig.cjs.json && echo '{\"type\": \"commonjs\"}' >dist/cjs/package.json",
    "start": "tsc -b -w",
    "clean": "rm -rf dist && rm -f src/ast/peggyParser.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "pnpm run test --watchAll",
    "coverage:local": "pnpm run test --coverage && echo && echo 'Open ./coverage/lcov-report/index.html to see the detailed report.'",
    "coverage": "pnpm run test --coverage && codecov",
    "lint:prettier": "prettier --check .",
    "lint": "pnpm run lint:prettier",
    "format:prettier": "prettier --write .",
    "format": "pnpm run format:prettier",
    "prepack": "pnpm run build && pnpm run test",
    "all": "pnpm run build && pnpm run test",
    "cli": "node --experimental-vm-modules ./dist/esm/src/cli/index.js"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^11.0.0",
    "commander": "^11.0.0",
    "immutable": "^4.3.0",
    "jstat": "^1.9.6",
    "lodash": "^4.17.21",
    "open": "^9.1.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.1",
    "@types/jest": "^29.5.2",
    "@types/lodash": "^4.14.195",
    "@types/node": "^20.3.3",
    "chalk": "^5.3.0",
    "codecov": "^3.8.3",
    "fast-check": "^3.10.0",
    "jest": "^29.5.0",
    "moduleserve": "^0.9.1",
    "peggy": "^3.0.2",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "type": "module",
  "source": "./src/index.ts",
  "module": "./dist/esm/src/index.js",
  "main": "./dist/cjs/src/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/src/index.js",
      "require": "./dist/cjs/src/index.js"
    }
  },
  "bin": {
    "squiggle": "./dist/esm/src/cli/index.js"
  }
}
