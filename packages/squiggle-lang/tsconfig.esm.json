{
  "compilerOptions": {
    "module": "es2020",
    "moduleResolution": "node16",
    "allowJs": true, // necessary for peggy parser
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./dist/esm",
    "composite": true,
    "target": "ES6",
    "esModuleInterop": true,
    "noImplicitOverride": true
  },
  "include": ["src/**/*", "scripts/**/*", "__tests__/**/*", "benchmark/**/*"]
}
