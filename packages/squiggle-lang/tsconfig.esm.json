{
  "compilerOptions": {
    // build settings
    "module": "es2020",
    "moduleResolution": "node16",
    "target": "es6", // TODO: es2020
    "esModuleInterop": true,
    "allowJs": true, // necessary for peggy parser
    "composite": true,
    "outDir": "./dist/esm",
    "declarationMap": true,
    "sourceMap": true,
    // type check settings
    "strict": true,
    "skipLibCheck": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "removeComments": true,
    "preserveConstEnums": true // TODO - disable?
  },
  "include": ["src/**/*", "scripts/**/*", "__tests__/**/*", "benchmark/**/*"]
}
