{
  "extends": "@quri/configs/tsconfig.nextjs.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "@gen/*": ["./src/__generated__/*"]
    },
    // type check settings
    "plugins": [
      {
        "name": "next"
      }
    ],
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    "test/**/*.ts"
  ]
}
