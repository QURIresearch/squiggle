{
  "compilerOptions": {
    "module": "Node16", // required by changeset for changelog.ts script
    "moduleResolution": "Node16",
    "target": "es2021",
    "esModuleInterop": true,
    "rootDir": "scripts",
    "outDir": "dist",
    // type check settings
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["scripts/**/*.ts", "scripts/changeset-version.mts"]
}
