{
  "name": "@quri/ui",
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "storybook dev -p 6007",
    "build:ts": "tsc",
    "build:css": "postcss ./src/styles/main.css -o ./dist/main.css",
    "build:storybook": "storybook build",
    "clean:ts": "rm -rf ./dist && rm -f ./tsconfig.tsbuildinfo",
    "build": "yarn clean:ts && yarn build:ts && yarn build:css && yarn build:storybook",
    "lint": "prettier --check . && eslint --ignore-path .gitignore ./src",
    "format": "prettier --write ."
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./dist/main.css": {
      "default": "./dist/main.css"
    }
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "source": "./src/index.ts",
  "peerDependencies": {
    "react": "^17 || ^18",
    "react-dom": "^17 || ^18"
  },
  "devDependencies": {
    "@storybook/addon-docs": "^7.0.11",
    "@storybook/addon-essentials": "^7.0.11",
    "@storybook/addon-interactions": "^7.0.18",
    "@storybook/addon-links": "^7.0.18",
    "@storybook/blocks": "^7.0.11",
    "@storybook/react": "^7.0.18",
    "@storybook/react-vite": "^7.0.18",
    "@storybook/testing-library": "^0.1.0",
    "@tailwindcss/forms": "^0.5.3",
    "postcss": "^8.4.23",
    "postcss-cli": "^10.1.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.0.18",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.0.4"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "no-console": "error"
    },
    "overrides": [
      {
        "files": [
          "**/*.stories.*",
          "src/index.ts"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "dependencies": {
    "@floating-ui/react": "^0.24.0",
    "@headlessui/react": "^1.7.14",
    "framer-motion": "^10.12.10",
    "react-hook-form": "^7.44.2",
    "react-textarea-autosize": "^8.4.1",
    "react-use": "^17.4.0"
  }
}
