{
  "compilerOptions": {
    "module": "es2020",
    "moduleResolution": "node16",
    "jsx": "react-jsx",
    "target": "ES6",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "removeComments": true,
    "strict": true,
    "preserveConstEnums": true,
    "composite": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
