{
  "compilerOptions": {
    // build settings
    "module": "es2020",
    "moduleResolution": "node16",
    "target": "es2022",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "composite": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "preserveConstEnums": true,
    // type check settings
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
