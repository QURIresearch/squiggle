{
  "extends": "@quri/configs/tsconfig.nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": " @mdx-js/typescript-plugin",
      },
      {
        "name": "next",
      },
    ],
    "paths": {
      "@/*": ["./src/*"],
      "content-collections": ["./.content-collections/generated"],
    },
    "strictNullChecks": true,
  },
  "include": [
    "next-env.d.ts",
    "src/**/*",
    "content/**/*.mdx",
    ".next/types/**/*.ts",
  ],
  "mdx": {
    "checkMdx": true,
  },
}
