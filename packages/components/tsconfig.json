{
  "compilerOptions": {
    "paths": {
      "@quri/squiggle-lang": ["../squiggle-lang/src"],
      "@quri/prettier-plugin-squiggle": ["../prettier-plugin/src"]
    },
    "module": "es2020",
    "moduleResolution": "node16",
    "target": "es2022",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "removeComments": true,
    "strict": true,
    "preserveConstEnums": true,
    "composite": true,
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "webpack.config.js"],
  "references": [
    {
      "path": "../squiggle-lang"
    },
    {
      "path": "../prettier-plugin"
    }
  ]
}
