{
  "name": "@quri/squiggle-components",
  "version": "0.8.6-0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/quantified-uncertainty/squiggle.git",
    "directory": "packages/components"
  },
  "author": "Quantified Uncertainty Research Institute",
  "dependencies": {
    "@codemirror/autocomplete": "^6.9.1",
    "@codemirror/commands": "^6.3.0",
    "@codemirror/language": "^6.9.1",
    "@codemirror/lint": "^6.4.2",
    "@codemirror/search": "^6.5.4",
    "@codemirror/state": "^6.2.1",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@codemirror/view": "^6.21.2",
    "@floating-ui/react": "^0.24.8",
    "@heroicons/react": "^1.0.6",
    "@hookform/resolvers": "^3.3.1",
    "@lezer/common": "^1.1.0",
    "@quri/prettier-plugin-squiggle": "workspace:*",
    "@quri/squiggle-lang": "workspace:*",
    "@quri/ui": "workspace:*",
    "@react-hook/size": "^2.1.2",
    "@tailwindcss/typography": "^0.5.10",
    "@types/d3": "^7.4.2",
    "clsx": "^2.0.0",
    "codemirror": "^6.0.1",
    "d3": "^7.8.5",
    "framer-motion": "^10.16.4",
    "lodash": "^4.17.21",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-error-boundary": "^4.0.11",
    "react-hook-form": "^7.47.0",
    "react-markdown": "^8.0.7",
    "react-resizable": "^3.0.5",
    "vscode-uri": "^3.0.8",
    "zod": "^3.22.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@juggle/resize-observer": "^3.4.0",
    "@lezer/generator": "^1.5.1",
    "@lezer/highlight": "^1.1.6",
    "@lezer/lr": "^1.3.12",
    "@storybook/addon-actions": "^7.4.5",
    "@storybook/addon-docs": "^7.2.1",
    "@storybook/addon-essentials": "^7.2.1",
    "@storybook/addon-links": "^7.2.1",
    "@storybook/blocks": "^7.4.0",
    "@storybook/node-logger": "^7.4.5",
    "@storybook/react": "^7.0.24",
    "@storybook/react-vite": "^7.2.1",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.7",
    "@types/lodash": "^4.14.199",
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.33",
    "@types/react-resizable": "^3.0.6",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@types/webpack-bundle-analyzer": "^4.6.1",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "canvas": "^2.11.2",
    "eslint": "^8.50.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^22.1.0",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "resize-observer-polyfill": "^1.5.1",
    "rollup-plugin-node-builtins": "^2.1.2",
    "storybook": "^7.4.5",
    "tailwindcss": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "web-vitals": "^3.5.0",
    "webpack": "^5.88.2",
    "webpack-bundle-analyzer": "^4.9.1",
    "webpack-cli": "^5.1.4"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17 || ^18",
    "react-dom": "^16.8.0 || ^17 || ^18"
  },
  "scripts": {
    "start": "pnpm dev",
    "dev": "storybook dev -p 6006",
    "build:ts": "rm -rf dist/src dist/tsconfig.build.tsbuildinfo && tsc -b",
    "build:css": "postcss ./src/styles/full.css -o ./dist/full.css && postcss ./src/styles/common.css -o ./dist/common.css",
    "build:lezer": "cd ./src/languageSupport; mkdir -p generated; lezer-generator ./squiggle.grammar --output generated/squiggle.ts",
    "build:storybook": "storybook build",
    "build": "pnpm run build:lezer && pnpm run build:ts && pnpm run build:css && pnpm run build:storybook",
    "bundle": "webpack",
    "all": "pnpm bundle && pnpm build",
    "lint": "pnpm lint:prettier && pnpm eslint",
    "lint:prettier": "prettier --check .",
    "eslint": "eslint --ignore-path .gitignore .",
    "format": "prettier --write .",
    "prepack": "pnpm run build:ts && pnpm run bundle",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:debug": "node --inspect-brk --experimental-vm-modules node_modules/.bin/jest --runInBand",
    "test:profile": "node --cpu-prof --experimental-vm-modules node_modules/.bin/jest --runInBand"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-constant-condition": [
        "error",
        {
          "checkLoops": false
        }
      ],
      "no-console": "warn",
      "@typescript-eslint/no-empty-function": "off",
      "react/react-in-jsx-scope": "off",
      "react/prop-types": "off"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "overrides": [
      {
        "files": [
          "**/*.stories.*",
          "src/index.ts"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "files": [
    "dist",
    "src",
    "!**/tsconfig*.tsbuildinfo",
    "!dist/test"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./dist/src/index.js"
    },
    "./full.css": {
      "default": "./dist/full.css"
    },
    "./common.css": {
      "default": "./dist/common.css"
    },
    "./tailwind-plugin": {
      "default": "./dist/src/tailwind-plugin.cjs"
    }
  },
  "module": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "source": "./src/index.ts"
}
