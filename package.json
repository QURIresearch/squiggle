{
  "private": true,
  "name": "squiggle",
  "scripts": {
    "nodeclean": "rm -r node_modules && rm -r packages/*/node_modules",
    "preinstall": "npx only-allow pnpm",
    "changeset-version": "cd packages/ops && pnpm run changeset-version",
    "publish": "turbo lint build && changeset publish && cd packages/vscode-ext && pnpm run package && npx vsce publish --no-dependencies"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "prettier": "^3.0.3",
    "turbo": "^1.10.12",
    "turbo-ignore": "^1.10.13"
  }
}
