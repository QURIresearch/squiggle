{
  "$schema": "https://turborepo.org/schema.json",
  // Next.js manifests contain full path names which are platform-dependent,
  // so we can't share builds between Vercel deployments and Github Actions
  "globalEnv": ["PLATFORM"],
  "pipeline": {
    // dev target for pre-push checks
    "build:ts": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "*.tsbuildinfo"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        "build/**",
        ".next/**",
        "*.tsbuildinfo",
        "!.next/cache/**"
      ]
    },
    "build:storybook": {
      "dependsOn": ["build"],
      "outputs": ["storybook-static/**"]
    },
    "lint": {},
    "eslint": {},
    "test": {
      "dependsOn": ["build"]
    },
    "coverage": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "format": {
      "cache": false
    }
  }
}
