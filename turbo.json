{
  "$schema": "https://turborepo.org/schema.json",
  // Next.js manifests contain full path names which are platform-dependent,
  // so we can't share builds between Vercel deployments and Github Actions
  "globalEnv": ["PLATFORM"],
  "pipeline": {
    // dev target for pre-push checks
    "build:ts": {
      "dependsOn": ["^build:ts", "@quri/squiggle-lang#build"],
      "outputs": ["dist/**"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**", "!.next/cache/**"]
    },
    "format": {},
    "lint": {
      "dependsOn": ["^build", "@quri/prettier-plugin-squiggle#build"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "bundle": {
      "dependsOn": ["build"],
      "outputs": ["dist/bundle*"]
    },
    "coverage": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
