{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**", "!.next/cache/**"]
    },
    "format": {},
    "lint": {
      "dependsOn": ["^build", "@quri/prettier-plugin-squiggle#build"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "bundle": {
      "dependsOn": ["build"],
      "outputs": ["dist/bundle*"]
    },
    "coverage": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
